#: import SlideTransition kivy.uix.screenmanager.SlideTransition


MyScreenManager:
    MainScreen:
    VertForce:
    HorzForce:
    Fsqrt:
    Theta:
    Polar:
    Density:
    Temps:
    Ave_Vel:
    Ave_Acc:

<MainScreen>:
    name: "Main"
    ScrollView:
        do_scroll_x:False
        do_scroll_y:True
        size_hint:(None, None)
        size: (root.width, root.height)
        bar_width:5
        scroll_type:['bars', 'content']
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            Button:
                text:"Fy = Fsin(theta)"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(1, 0, 0)
                bold:True
                on_release: app.root.current="VertForce"
            Button:
                text:"Fx = Fcos(theta)"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(0, 1, 0)
                bold:True
                on_release: app.root.current="HorzForce"
            Button:
                text:"F = sqrt(Fx^2 + Fy^2)"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(0, 0.3, 1)
                bold:True
                on_release: app.root.current="Fsqrt"
            Button:
                text:"Theta = arctan(Fy/Fx)"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(1, 0.5, 0.5)
                bold:True
                on_release: app.root.current = "Theta"
            Button:
                text:"Polar = (Fx)i + (Fy)j"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(1, 0, 0)
                bold:True
                on_release: app.root.current = "Polar"
            Button:
                text:"Density = m/v"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(0, 1, 0)
                bold:True
                on_release: app.root.current = "Density"
            Button:
                text:"Temperatures C/K/F"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(0, 0.3, 1)
                bold:True
                on_release: app.root.current = "Temps"
            Button:
                text:"Vav = (X2 - X1) / (t2 - t1)"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(0, 1, 0)
                bold:True
                on_release: app.root.current = "Ave_Vel"
            Button:
                text:"Aav = (V2 - V1) / (t2 - t1)"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(0, 0.3, 1)
                bold:True
                on_release: app.root.current = "Ave_Acc"
            Button:
                text:"Fs = us(Fn)"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(1, 0.5, 0.5)
                bold:True
            Button:
                text:"Sigma(M) = (clockwise F*D) - (counterclockwise F*D)"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(1, 0, 0)
                bold:True
            Button:
                text:"Torque = F*D = FLsin(theta)"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(0, 1, 0)
                bold:True
            Button:
                text:"F = ma"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(0, 0.3, 1)
                bold:True
            Button:
                text:"w = mg"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(1, 0.5, 0.5)
                bold:True
            Button:
                text:"work = F * D"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(1, 0, 0)
                bold:True
            Button:
                text:"MA = Force Out / Force In"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(0, 1, 0)
                bold:True
            Button:
                text:"Fcos(theta) = ma"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(0, 0.3, 1)
                bold:True
            Button:
                text:"Fsin(theta) = ma"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(1, 0.5, 0.5)
                bold:True
            Button:
                text:"Change X = Vot + 1/2 at^2"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(1, 0, 0)
                bold:True
            Button:
                text:"v(t) = Vo + at"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(0, 1, 0)
                bold:True
            Button:
                text:"Q = mc deltaT"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(0, 0.3, 1)
                bold:True
            Button:
                text:"F deltaT = delta mv"
                font_size: root.text_size
                size_hint:(1, None)
                height: root.box_height
                color:(1, 0.5, 0.5)
                bold:True
        

<VertForce>:
    name: "VertForce"
    BoxLayout:
        id: mainBox
        orientation: "vertical"
        size: root.width, root.height
        GridLayout:
            cols: 2
            rows: 3
            size_hint: (1, 0.75)
            Label:
                text:"Fy"
                size_hint: (0.3, 1)
                bold:True
            TextInput:
                id: vertical_force_y
                size_hint: (0.7, 1)
                multiline:False
                text: ""
            Label:
                text:"Force"
                size_hint: (0.3, 1)
                bold:True
            TextInput:
                id: vertical_force
                size_hint: (0.7, 1)
                multiline:False
                text: ""
            BoxLayout:
                Label:
                    text:"sin(theta)"
                    size_hint: (0.3, 1)
                    bold:True
                TextInput:
                    id: vertical_force_sin_angle
                    size_hint: (0.7, 1)
                    multiline:False
                    text: ""
            BoxLayout:
                Label:
                    text:"theta"
                    size_hint: (0.3, 1)
                    bold:True
                TextInput:
                    id: vertical_force_angle
                    size_hint: (0.7, 1)
                    multiline:False
                    text: ""
        Label:
            text: "Fy=F(sin Theta)"
            size_hint_y: None
            font_size: "32dp"
            height: "50dp"
        Button:
            id: "submit"
            text: "Submit"
            size_hint_y: None
            height: "50dp"
            color: (1, 1, 1)
            on_release: 
                root.calculate()
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "50dp"
            Button:
                id: "main"
                text: "Back"
                color: (1, 1, 1)
                on_release: 
                    root.manager.transition = SlideTransition(direction='right')
                    app.root.current = "Main"
            Button:
                id: reset
                text: "RESET"
                color: (1, 1, 1)
                on_release:
                    root.reset()
                
