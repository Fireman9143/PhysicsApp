            TextInput:
                id: temp_f
                size_hint: (0.7, 1)
                multiline: False
                text: ""
            BoxLayout:
                orientation: "vertical"
                size_hint: (0.3, 1)
                Label: 
                    text: "Tc (celsius)"
                    bold: True
                Label:
                    text: "Tc = Tk - 273 = 5/9(Tf - 32)"
                    multiline: False
                    text: "0"
            TextInput:
                id: temp_c
                size_hint: (0.7, 1)
            BoxLayout:
                orientation: "vertical"
                size_hint: (0.3, 1)
                Label: 
                    text: "Tk (kelvin)"
                    bold: True
                Label:
                    text: "Tk = Tc + 273"
                    multiline: False
                    text: "0"
            TextInput:
                id: temp_k
                size_hint: (0.7, 1)
                multiline: False
                text: ""
        Button:
            id: submit
            text: "Submit"
            size_hint_y: None
