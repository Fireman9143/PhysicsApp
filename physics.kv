    BoxLayout:
        id: Temps
        orientation: "vertical"
        size: root.width, root.height
        GridLayout:
            cols: 2
            rows: 3
            BoxLayout:
                orientation: "vertical"
                size_hint: (0.3, 1)
                Label: 
                    text: "Tf (farenheit)"
                    bold: True
